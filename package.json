{
    "name": "bang",
    "displayName": "Bang!",
    "description": "A Vim like utility to run shell commands in VSCode",
    "version": "0.0.1",
    "publisher": "mtxr",
    "engines": {
        "vscode": "^1.23.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/mtxr/vscode-bang"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:bang.runCommand"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "bang.runCommand",
                "title": "Run Command",
                "category": "Bang!"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
